<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF42424A"
    tools:context="com.armyof2.poll4bunk.MainActivity">


    <TextView
        android:id="@+id/tv_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_badmin"
        android:layout_alignStart="@+id/tv_badmin"
        android:layout_below="@+id/tv_badmin"
        android:layout_marginTop="3dp"
        android:scrollHorizontally="true"
        android:text="$bunk admin"
        android:textAlignment="center"
        android:maxLines = "5"
        android:scrollbars = "horizontal"
        android:textColor="@android:color/holo_purple" />

    <TextView
        android:id="@+id/tv_badmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="Bunk Admin:"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tv_timeleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_quest"
        android:layout_marginTop="20dp"
        android:text="Time Left:"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tv_quest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rad_op2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Would you like to participate in Mass Bunk on:  "
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_quest"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="false"
        android:layout_marginRight="40dp"
        android:text="$date"
        android:textColor="@color/PieChartBlue"
        android:textSize="24sp" />


    <RadioButton
        android:id="@+id/rad_op1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rad_op3"
        android:layout_alignStart="@+id/tv_admin"
        android:layout_marginBottom="20dp"
        android:buttonTint="@color/PieChartGreen"
        android:text="Yes! Count me in!"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <RadioButton
        android:id="@+id/rad_op2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rad_op1"
        android:layout_alignBottom="@+id/rad_op1"
        android:layout_alignStart="@+id/rad_op1"
        android:layout_marginLeft="205dp"
        android:buttonTint="@color/PieChartPink"
        android:text="No, not interested"
        android:textColor="@android:color/white"
        android:textSize="14sp" />


    <RadioButton
        android:id="@+id/rad_op3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rad_op4"
        android:layout_alignBottom="@+id/rad_op4"
        android:layout_alignStart="@+id/rad_op1"
        android:buttonTint="@color/PieChartBlue"
        android:text="Yes.. if 80% or more are in"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <RadioButton
        android:id="@+id/rad_op4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/butt_sendop"
        android:layout_alignStart="@+id/rad_op2"
        android:layout_marginBottom="40dp"
        android:buttonTint="@color/PieChartYellow"
        android:text="Not decided yet"
        android:textColor="@android:color/white"
        android:textSize="14sp" />


    <Button
        android:id="@+id/butt_sendop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:onClick="onConfirmButtonClicked"
        android:text="Confirm"
        android:textColor="@android:color/white"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_cdtimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_timeleft"
        android:layout_alignStart="@+id/tv_timeleft"
        android:layout_below="@+id/tv_timeleft"
        android:layout_marginTop="3dp"
        android:text="$cdtimer"
        android:textAlignment="center"
        android:textColor="@android:color/holo_purple" />

</RelativeLayout>
